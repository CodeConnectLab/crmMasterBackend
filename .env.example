# ========================================
# DATABASE CONFIGURATION
# ========================================
MONGO_URI=mongodb://localhost:27017/crm
MONGO_TEST_URI=mongodb://localhost:27017/crm-test

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# ========================================
# JWT & AUTHENTICATION
# ========================================
JWT_SECRET=your-secret-key-here
JWT_EXPIRY=30d

# ========================================
# EMAIL CONFIGURATION
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourcompany.com

# ========================================
# AWS CONFIGURATION (Optional)
# ========================================
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# ========================================
# FACEBOOK LEAD INTEGRATION
# ========================================
# Get these credentials from Facebook Developer Portal
# https://developers.facebook.com/apps

# Your Facebook App Credentials
FACEBOOK_APP_ID=your_app_id_here
FACEBOOK_APP_SECRET=your_app_secret_here

# Application URL (for webhook callbacks)
# Use your production URL in production
APP_URL=https://yourdomain.com

# Webhook Verify Token (random, secure string)
WEBHOOK_VERIFY_TOKEN=generate_random_secure_token_here

# Optional: Custom Database for Facebook Data
# If not set, uses default MONGO_URI
# FACEBOOK_DB_URI=mongodb://localhost:27017/facebook-leads

# ========================================
# FIREBASE CONFIGURATION (Optional)
# ========================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email
FCM_SERVER_KEY=your-fcm-server-key

# ========================================
# REDIS CONFIGURATION (Optional)
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# EXTERNAL INTEGRATIONS
# ========================================
# Twilio
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# LOGGING & MONITORING
# ========================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# ========================================
# API RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100
